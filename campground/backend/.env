# ================================
# Database Configuration (PostgreSQL)
# ================================
DB_URL=jdbc:postgresql://postgres:5432/campstation   # DB 접속 URL (서비스명:포트/DB명)
DB_USERNAME=campstation                              # DB 사용자명
DB_PASSWORD=campstation2024                          # DB 비밀번호 (운영 환경에서는 안전하게 관리 필요)
DB_POOL_SIZE=20                                      # 최대 커넥션 풀 크기
DB_POOL_MIN_IDLE=5                                   # 최소 유휴 커넥션 수
DB_CONNECTION_TIMEOUT=30000                          # 커넥션 타임아웃 (ms)
DB_IDLE_TIMEOUT=600000                               # 유휴 커넥션 종료 시간 (ms)
DB_MAX_LIFETIME=1800000                              # 커넥션 최대 생존 시간 (ms)

# ================================
# Redis Configuration (Cache)
# ================================
REDIS_HOST=redis                                     # Redis 서비스명 (docker-compose 기준)
REDIS_PORT=6379                                      # Redis 포트

# ================================
# JWT Configuration (Authentication)
# ================================
JWT_SECRET=campstation-production-super-secret-key-for-jwt-token-generation-must-be-at-least-64-bytes-long-hs512 
# JWT 서명용 시크릿 키 (운영 환경에서는 반드시 안전하게 관리)
JWT_EXPIRATION=900000                                # 액세스 토큰 만료 시간 (ms) → 15분
JWT_REFRESH_EXPIRATION=604800000                       # 리프레시 토큰 만료 시간 (ms) → 7일

# ================================
# Email Configuration (SMTP)
# ================================
MAIL_HOST=smtp.gmail.com                             # SMTP 서버 주소
MAIL_PORT=587                                        # SMTP 포트 (TLS 기본)
MAIL_USERNAME=sentimentalhoon@gmail.com              # SMTP 계정 아이디
MAIL_PASSWORD=wjhjaozvobeddfel                       # SMTP 앱 비밀번호 (보안을 위해 Secret Manager 사용 권장)

# ================================
# Twilio SMS Configuration
# ================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid           # Twilio 계정 SID
TWILIO_AUTH_TOKEN=your-twilio-auth-token             # Twilio 인증 토큰
TWILIO_PHONE_NUMBER=your-twilio-phone-number         # 발신 전화번호

# ================================
# Logging Configuration
# ================================
LOG_LEVEL=INFO                                       # 로그 레벨 (DEBUG, INFO, WARN, ERROR)
LOG_FILE=/var/log/campstation/application.log        # 로그 파일 경로

# ================================
# Admin Configuration
# ================================
ADMIN_USERNAME=admin                                 # 관리자 계정 아이디
ADMIN_PASSWORD=campstation2024                       # 관리자 계정 비밀번호 (운영 환경에서는 안전하게 관리 필요)

# ================================
# Application Configuration
# ================================
SPRING_PROFILES_ACTIVE=dev                           # Spring Boot 실행 프로파일 (dev/prod 등)
SERVER_ADDRESS=0.0.0.0                               # 서버 바인딩 주소 (0.0.0.0 → 모든 인터페이스)
SERVER_PORT=8080                                     # 서버 포트
FILE_UPLOAD_PATH=uploads                             # 파일 업로드 저장 경로
FILE_MAX_SIZE_BYTES=10485760                         # 업로드 파일 최대 크기 (10MB)

# ================================
# S3/MinIO Storage Configuration
# ================================
AWS_S3_BUCKET_NAME=campstation                       # S3/MinIO 버킷 이름
CLOUD_AWS_S3_ENDPOINT=http://localhost:9000          # MinIO 내부 엔드포인트
CLOUD_AWS_S3_EXTERNAL_ENDPOINT=http://localhost:9000 # MinIO 외부 엔드포인트
CLOUD_AWS_S3_PUBLIC_ENDPOINT=http://localhost:9000   # MinIO 공개 엔드포인트 (개발 환경)
AWS_ACCESS_KEY_ID=minioadmin                         # MinIO 액세스 키
AWS_SECRET_ACCESS_KEY=minioadmin                     # MinIO 시크릿 키
AWS_REGION=us-east-1                                 # 리전 (MinIO에서는 무시됨)

