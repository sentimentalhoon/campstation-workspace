# ================================
# CampStation - Environment Variables Template
# ================================
# INSTRUCTIONS:
# 1. Copy this file to .env
# 2. Replace all placeholder values with actual secrets
# 3. NEVER commit .env files to version control
# ================================

# ================================
# 애플리케이션 기본 설정
# ================================
SPRING_PROFILES_ACTIVE=docker
APP_NAME=CampStation
APP_VERSION=1.0.0

# ================================
# 데이터베이스 설정 (PostgreSQL)
# ================================
DB_URL=jdbc:postgresql://db:5432/campstation
DB_DRIVER=org.postgresql.Driver
DB_USERNAME=campstation
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_32_CHARS_MIN
DB_POOL_SIZE=20
DB_POOL_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# ================================
# Redis 캐시 설정
# ================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TIMEOUT=2000ms
REDIS_MAXMEMORY=512mb
REDIS_MAXMEMORY_POLICY=allkeys-lru

# ================================
# JWT 인증 설정
# ================================
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_BASE64_STRING_AT_LEAST_64_BYTES
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ================================
# CORS 크로스 오리진 설정
# ================================
CORS_ALLOWED_ORIGINS=http://frontend:3000,http://localhost:3000

# ================================
# AWS S3 설정
# ================================
# IMPORTANT: Use IAM Role instead of Access Keys in production
# For local development only:
AWS_S3_BUCKET_NAME=your-bucket-name
AWS_S3_REGION=ap-northeast-2
AWS_S3_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY_ID
AWS_S3_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_ACCESS_KEY
AWS_S3_ENDPOINT=https://s3.ap-northeast-2.amazonaws.com

# ================================
# OAuth2 설정 (선택사항)
# ================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# ================================
# 이메일 설정 (선택사항)
# ================================
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# ================================
# Admin 계정 설정
# ================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_32_CHARS_MIN
ADMIN_EMAIL=admin@campstation.com

# ================================
# 로깅 설정
# ================================
LOGGING_LEVEL_COM_CAMPSTATION=INFO
LOGGING_LEVEL_ROOT=WARN
