        {
          "name": "비밀번호 변경",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123!\",\n  \"newPassword\": \"newpassword123!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/users/password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "v1", "users", "password"]
            },
            "description": "사용자의 비밀번호를 변경합니다."
          },
          "response": []
        }
      ]
    },
