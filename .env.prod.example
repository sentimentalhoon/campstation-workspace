# ================================
# CampStation - Production Environment Template
# ================================
# INSTRUCTIONS:
# 1. Copy this file to .env.prod
# 2. Fill in all values from Terraform outputs and AWS Secrets Manager
# 3. NEVER commit .env.prod to version control
# ================================

# ================================
# 서버 설정 (Terraform outputs)
# ================================
SERVER_URL=http://YOUR_ALB_DNS_FROM_TERRAFORM
FRONTEND_URL=http://YOUR_ALB_DNS_FROM_TERRAFORM

# ================================
# 데이터베이스 설정 (RDS)
# ================================
DB_HOST=YOUR_RDS_ENDPOINT_FROM_TERRAFORM
DB_PORT=5432
DB_NAME=campstation
DB_USERNAME=campstation_user
DB_PASSWORD=STRONG_PASSWORD_FROM_SECRETS_MANAGER

# ================================
# Redis 설정 (ElastiCache)
# ================================
REDIS_HOST=YOUR_ELASTICACHE_ENDPOINT_FROM_TERRAFORM
REDIS_PORT=6379
REDIS_PASSWORD=

# ================================
# AWS S3 설정
# ================================
AWS_S3_BUCKET_NAME=YOUR_S3_BUCKET_FROM_TERRAFORM
AWS_S3_REGION=ap-northeast-2
# DO NOT USE ACCESS KEYS - Use IAM Role attached to ECS Task
# AWS_S3_ACCESS_KEY_ID=USE_IAM_ROLE_INSTEAD
# AWS_S3_SECRET_ACCESS_KEY=USE_IAM_ROLE_INSTEAD

# ================================
# JWT 설정
# ================================
# Generate with: openssl rand -base64 64
JWT_SECRET=SECURE_RANDOM_BASE64_STRING_FROM_SECRETS_MANAGER
JWT_EXPIRATION=86400000

# ================================
# OAuth 설정
# ================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# ================================
# 이메일 설정 (선택사항)
# ================================
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587

# ================================
# 로깅
# ================================
LOGGING_LEVEL_COM_CAMPSTATION=INFO
LOGGING_LEVEL_ROOT=WARN
